#-------Sdet--------------------------------------------#

all: vhd_to_fsm\
	 sdeta.vbe \
     sdetj.vbe \
     sdetm.vbe \
     sdeto.vbe \
     sdetr.vbe 
	     @echo "<-- Generated"

#-------Finite State Machine Synthesis-----------------#

vhd_to_fsm:
	rename .vhd .fsm *.vhd

sdeta.vbe: dac.fsm
	@echo "    Encoding Synthesis -> sdeta.vbe"
	syf -CEV -a dac
 
sdetj.vbe: dac.fsm
	@echo "    Encoding Synthesis  -> sdetj.vbe"
	syf -CEV -j dac
 
sdetm.vbe: dac.fsm
	@echo "    Encoding Synthesis  -> sdetm.vbe"
	syf -CEV -m dac
 
sdeto.vbe: dac.fsm
	@echo "    Encoding Synthesis  -> sdeto.vbe"
	syf -CEV -o dac
 
sdetr.vbe: dac.fsm
	@echo "    Encoding Synthesis  -> sdetr.vbe"
	syf -CEV -r dac

#-------Clean Up---------------------------------------#

clean :
	rm -f  *.vbe *.enc *~
	@echo "Erase all the files generated by the makefile"

